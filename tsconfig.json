{
  "compilerOptions": {
    "baseUrl": ".",

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",

    "declaration": true,
    "declarationDir": "types",

    "strict": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "types": ["webpack-env", "jest"],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
